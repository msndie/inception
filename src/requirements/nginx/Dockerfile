FROM alpine:3.15
RUN apk update
RUN apk add --no-cache openssl nginx
# RUN wget https://nginx.org/download/nginx-1.22.0.tar.gz
# RUN tar xzvf nginx-1.22.0.tar.gz
# RUN cd nginx-1.22.0 && ./configure --prefix=/etc/nginx --with-http_ssl_module
# RUN cd
# RUN make -C /nginx-1.22.0
# RUN make -C /nginx-1.22.0 install
RUN mkdir /etc/nginx/ssl
RUN openssl req -newkey rsa:4096 -x509 -sha256 -days 1024 -nodes \
        -out /etc/nginx/ssl/sclam.42.fr.pem \
        -keyout /etc/nginx/ssl/sclam.42.fr.key \
        -subj "/C=RU/CN=sclam.42.fr/"
# RUN rm /etc/nginx/conf/nginx.conf
# RUN rm /etc/nginx/conf/nginx.conf.default
# COPY conf/nginx.conf /etc/nginx/conf/nginx.conf
RUN rm /etc/nginx/nginx.conf
COPY conf/nginx.conf /etc/nginx/nginx.conf
CMD ["nginx", "-g", "daemon off;"]